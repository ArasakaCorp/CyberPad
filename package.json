{
  "name": "cyberpad",
  "version": "1.0.3",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:ui": "vite build",
    "build": "npm run build:ui && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.cyberpad.notebook",
    "productName": "CyberPad",
    "directories": {
      "buildResources": "electron/assets",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis","portable"],
      "icon": "electron/assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CyberPad"
    },
    "fileAssociations": [
      {
        "ext": "txt",
        "name": "Text file",
        "description": "CyberPad text document",
        "role": "Editor",
        "icon": "electron/assets/icons/icon.ico"
      },
      {
        "ext": "md",
        "name": "Markdown file",
        "description": "CyberPad markdown document",
        "role": "Editor",
        "icon": "electron/assets/icons/icon.ico"
      }
    ]
  }
}
